<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <com.example.speechwaves.SpeechWaves
            android:id="@+id/speech_waves"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="match_parent"
            android:layout_height="400dp"/>

    <View
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/button"
            app:layout_constraintTop_toTopOf="@id/speech_waves"
            app:layout_constraintBottom_toBottomOf="@id/speech_waves"
            app:layout_constraintStart_toStartOf="@id/speech_waves"
            app:layout_constraintEnd_toEndOf="@id/speech_waves"
    />

</androidx.constraintlayout.widget.ConstraintLayout>